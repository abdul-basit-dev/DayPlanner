<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/round_round">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

      >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvcamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/colorListView"
            app:cardCornerRadius="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="12dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:visibility="gone"
                        android:id="@+id/test_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_list_workTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Work Type"
                    android:layout_gravity="left"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:textColorHint="@color/colorhint"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    tools:ignore="RtlCompat"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/list_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorhint"
                    android:layout_weight="1"
                    tools:ignore="RtlCompat"
                    android:padding="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="3"
                >
                <TextView
                    android:id="@+id/list_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Monday"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorhint"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="08:15 AM"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"

                    android:textColor="@color/colorTime"
                    />
                <TextView
                    android:id="@+id/list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="24 Apr 2020"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorhint"
                    android:visibility="gone"
                    />



            </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </RelativeLayout>


</FrameLayout>